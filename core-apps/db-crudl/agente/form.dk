                                                }
                                                div(class="mb-3 row")       
                                                {
                                                    div(class="col-sm-6")
                                                    {
                                                        label(class="form-label"){"Ciudad"}
                                                        // input(type="text" class="form-control" name="iciudad" value="#<@('./domicilio/iciudad')>")
                                                        select(class="form-control" id="ciudad"){$""}
                                                    }
                                                    div(class="col-sm-6")
